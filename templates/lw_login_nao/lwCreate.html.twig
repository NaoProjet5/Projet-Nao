{% extends 'lwLayoutAdmin.html.twig' %}

{% block contentPage %}
    <div class="content">
        <div class="content">
            <div class="container-fluid">
                <h3> Cr√©ation d'article</h3>
                    {{ form_start(form) }}
                    <div class="form-group">
                    {{ form_label(form.title,'Titre de l\'article') }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control','type':'text'}}) }}
                    </div>
                    <div class="form-group">
                    {{ form_label(form.content,'Contenu de l\'article') }}
                        {{ form_widget(form.content, {'attr': {'class': 'form-control','type':'textarea'}}) }}
                    </div>
                    <div class="form-group">
                    {{ form_label(form.photo,'Photo de l\'article') }}
                        {{ form_widget(form.photo, {'attr': {'class': 'form-control-file'}}) }}
                    </div>
                    <button type="submit" class="btn btn-success">
                        Enregistrer l'article
                    </button>
                    {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}