{% extends 'lwLayoutAdmin.html.twig' %}

{% block contentPage %}
    <div class="content">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12 col-sm-12">
                        <div class="row">
                            <div class="col-lg-12 col-sm-12">
                                <h3>La Création de votre Compte Utilisateur</h3>
                                <div class="row">
                                    <div class="center col-lg-12 col-sm-12">
                                        {{ form_start(form, {'attr': {'class': 'col-sm-6 col-sm-offset-6'}}) }}
                                        {{ form_errors(form) }}
                                        {% include ('jd_login_nao/TemplatesViews/jdFormLogin.html.twig') %}
                                        <div class="form-group">
                                            {{ form_label(form.roles, "Choisissez le type de Rôle") }}
                                            {{ form_errors(form.roles) }}
                                            {{ form_widget(form.roles, {'attr': {'class': 'form-control', 'id': 'roles'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_label(form.password, 'Mot de passe ') }}
                                            {{ form_errors(form.password) }}
                                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'id': 'prenom', 'placeholder': 'Mot de passe'}}) }}
                                        </div>
                                        <div class="form-group">
                                            {{ form_label(form.passwordConfirm, 'Confirmer votre mot de passe ') }}
                                            {{ form_errors(form.passwordConfirm) }}
                                            {{ form_widget(form.passwordConfirm, {'attr': {'class': 'form-control', 'id': 'prenom', 'placeholder': 'Repeter le mot de passe'}}) }}
                                        </div>
                                        {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-success'}}) }}
                                        {{ form_end(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}