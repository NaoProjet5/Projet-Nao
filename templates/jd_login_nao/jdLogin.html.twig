{% extends 'lwLayout.html.twig' %}

{% block body %}

    <section class="title_page">

        <div class="section_content">

            <h1>Connexion</h1>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>

    </section>
    <div class="body_content connexion">

        <div id="connexion_form">

            <h2 class="souligner">Se connecter</h2>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form_obs">
            <form action="{{ path('loginUsers') }}" method="post">
                <div>
                    <h3>Adresse mail</h3>
                    <input type="text" placeholder="Adresse email ..." required name="_username" class="form-control col-lg-6 col-sm-6">
                </div>
                <div>
                    <h3>Mot de passe</h3>
                    <input type="password" placeholder="Mot de passe ..." required name="_password" class="form-control col-lg-6 col-sm-6">
                </div>
                <div class="form-group">
                     <button type="submit" class="submit">Connexion</button>
                </div>
            </form>
        </div>
            <p>Vous n'avez toujours pas de compte ?</p>

            <a href="{{ path('createdAtUser') }}" class="submit">S'inscrire</a>
    </div>
    </div>
    </div>
{% endblock %}