{% extends 'lwLayout.html.twig' %}

{% block body %}

<section class="title_page">

    <div class="section_content">

        <h1>Inscription</h1>

    </div>

</section>
<div class="body_content connexion">
    <div id="connexion_form">

        <h2 class="souligner">Creation de votre compte</h2>
        <div class="form_obs">
            {{ form_start(form, {'attr': {'class': 'col-sm-6 col-sm-offset-6'}}) }}
            {{ form_errors(form) }}
            <div class="form-group">
                {{ form_label(form.email, 'Votre adresse email') }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'id': 'nom', 'required': 'required', 'placeholder': 'Email'}}) }}
                <span id="nomVide"></span>
            </div>
            <div class="form-group">
                {{ form_label(form.password, 'Mot de passe ') }}
                {{ form_errors(form.password) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'id': 'prenom', 'placeholder': 'Mot de passe'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(form.passwordConfirm, 'Confirmer votre mot de passe ') }}
                {{ form_errors(form.passwordConfirm) }}
                {{ form_widget(form.passwordConfirm, {'attr': {'class': 'form-control', 'id': 'prenom', 'placeholder': 'Repeter le mot de passe'}}) }}
            </div>
        <br>
            <div class="form-group">
                {{ form_widget(form.recaptcha) }}

            </div>
            <div class="form-group">
            {{ form_widget(form.Enregistrer, {'attr': {'class': 'submit'}}) }}
            </div>
            {{ form_end(form) }}
        </div>

    </div>
</div>
{% endblock %}

