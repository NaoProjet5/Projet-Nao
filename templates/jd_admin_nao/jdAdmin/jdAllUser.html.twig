{% extends 'lwLayoutAdmin.html.twig' %}

{% block contentPage %}
    <div class="content">
        <div class="content">
            <div class="container-fluid">

            <h4 class="card-title ">Liste des utilisateurs</h4>
        <div class="col-md-6">
            <a href="{{ path('jdadduserNao')}}" class="btn btn-success">Créer un utilisateur<div class="ripple-container"></div></a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead class=" text-primary">
                    <th>
                        Nom
                    </th>
                    <th>
                        Prenom
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Rôle
                    </th>
                    <th>
                        Actions
                    </th>
                    </thead>
                    {% for user in users %}
                        <tbody>

                        <tr>
                            <td>
                                {{ user.name }}
                            </td>
                            <td>
                                {{ user.firstname }}
                            </td>
                            <td>
                                {{ user.email }}
                            </td>
                            <td>
                                {{ user.roles[0] }}
                            </td>
                            <td>
                                <a href="{{ path('jdUpDateUser', {'id': user.id}) }}" class="btn btn-info btn-link" rel="tooltip" data-placement="bottom" title="Modifier un utilisateur">
                                    <i class="material-icons">edit</i>
                                </a>
                                <a href="{{ path('jdRemoveUser', {'id': user.id}) }}" class="btn btn-danger btn-link" rel="tooltip" data-placement="bottom" title="Supprimer">
                                    <i class="material-icons">close</i>
                                </a>
                            </td>
                        </tr>

                        </tbody>
                    {% endfor %}
                </table>

                <nav aria-label="...">
                    <ul class="pagination">
                        <li class="page-item disabled">
                            <span class="page-link">Previous</span>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item active">
      <span class="page-link">
        2
        <span class="sr-only">(current)</span>
      </span>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div><!--end of card -->



    </div> <!--end of container fluid -->
    </div>
    </div>
{% endblock %}