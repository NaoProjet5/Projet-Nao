        architecto asperiores autem commodi consectetur consequuntur culpa distinctio dolorem doloribus dolorum ducimus esse
        eveniet explicabo illum ipsa iure labore magnam magni necessitatibus nemo non nulla obcaecati provident quos
        recusandae reiciendis reprehenderit, repudiandae sed sit soluta tempore vel veniam. Ipsa, laudantium.
    </p>
    {%  if observations is null  %}
        <p>Pas d'observation enregistrées pour l'instant</p>
    {%  else %}
    <h4>Liste des dernières observations</h4>
    <section class="article row">
        {% for observation in observations  %}
            <div class="col-lg-2">
                {% if observation.photo is null %}
                    <img src="{{ asset('images_appli/no_photo_available.jpg') }}" alt="Bootstrap" class="img-thumbnail">
                {% else %}
                    <img src="{{ asset('images_appli/'~ observation.photo) }}" alt="Bootstrap" class="img-thumbnail">
                {% endif %}
                <h5>{{ observation.nom  }}</h5>
                <div class="metadata">Ecrit le {{ observation.createdAt | date('d/m/Y') }} à {{ observation.createdAt | date('H:i') }}</div>
                <div class="content">

                    <a href="{{ path('bird',{'id':observation.oiseau.id}) }}" class="btn btn-primary">Détail de l'observation</a>
                </div>
            </div>

        {% endfor %}

    </section>
    {% endif %}
    <h4>Liste des derniers articles</h4>
    <section class="article row">
        {% for article in articles  %}
            <div class="col-lg-2">
                <h5>{{ article.title  }}</h5>
                <div class="metadata">Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }}</div>
                <div class="content">

                    <a href="{{ path('oneArticle',{'id':article.id}) }}" class="btn btn-primary">Détails</a>
                </div>
            </div>

        {% endfor %}

    </section>
{% endblock %}
