{% extends 'lwLayout.html.twig' %}

{% block body %}

    <section class="title_page">

        <div class="section_content">

            <h1>BLOG</h1>

        </div>

    </section>
    <div class="body_content">

    <div class="content">

    <div class="last_articles">

    <h2>Les articles publiés</h2>

    <div class="last_articles_content">
        {% for article in articles  %}
    <div class="last_article_item">

        <div class="image_last_article_item">

            <a><img src="https://jardinage.lemonde.fr/images/dossiers/2018-05/mesange-bleue-1-055106.jpg" /></a>

        </div>

        <h3>{{ article.title  }}</h3>

        <p>Ecrit le {{ article.createdAt | date('d/m/Y') }} à {{ article.createdAt | date('H:i') }}</p>

        <a class="action_view" href="{{ path('oneArticle',{'id':article.id}) }}">Voir l'article</a>

      </div>
        {% endfor %}
    </div>

    </div>

    </div>

    </div>

{% endblock %}